<%= render 'shared/banner', cocktail: @cocktail %>
<div class="container">
  
  <h1><%= @cocktail.name %></h1>
  <% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill  %>
  <% end %>
  <p><% @cocktail.doses.each do |dose| %></p>

  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to "Delete this line", dose_path(dose.id),
  method: :delete,
  data: { confirm: "Are you sure?" } %>
  <hr>
  <% end %>
<div class="button">
  
</div>
  <h4>Add a Dose</h4>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.input :ingredient_id, collection: @ingredients, include_blank: false %>
    <%= f.submit "Add a dose", class: "btn btn-primary" %>
    <% end %>

  <%= link_to "Back to cocktails", cocktails_path, class: "btn btn-primary" %>
</div>